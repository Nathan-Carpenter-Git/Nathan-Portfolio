@model ContactUserMessage

@{
    ViewData["Title"] = "Contact";
    string responseMessage = Context.Request.Query["ResponseMessage"].ToString();
}

<div class="col py-0">
    <div class="bg-secondary row p-5 divider">
        <p class="display-1 font-monospace text-center text-light">Contact Me</p>
    </div>

    <div class="bg-primary divider align-content-center row font-monospace text-dark" style="height: 1000px;">
        <p class="display-6 text-center">Contact Information</p>
        @if (!String.IsNullOrEmpty(responseMessage))
        {
            @if (responseMessage == "Email Sent Unsuccessfully")
            {
                <p class="description text-center mb-0 text-danger">@responseMessage</p>
            }
            else if (responseMessage == "Email Sent Sucessfully")
            {
                <p class="description text-center mb-0 text-success">@responseMessage</p>
            }
        }

        <div style="padding-left: 25%; padding-right: 25%;">
            <form method="post" id="contact-form">
                <div class="flex-column d-flex p-2">
                    <label for="firstName" class="description">First Name</label>
                    <input type="text" placeholder="John" class="p-2 my-3 form-text" id="firstName" name="firstName" asp-for="FirstName" required />

                    <label for="lastName" class="description">Last Name</label>
                    <input type="text" placeholder="Doe" class="p-2 my-3 form-text" id="lastName" name="lastName" asp-for="LastName" required />

                    <label for="email" class="description">Email Address</label>
                    <input type="email" class="p-2 my-3 form-text" placeholder="123@gmail.com" id="email" name="email" asp-for="Email" required />
                </div>

                <div class="flex-column d-flex p-2">
                    <label for="message" class="description">Message</label>
                    <textarea id="message" class="my-3 form-text" name="message" placeholder="Enter message" rows="4" asp-for="Message" cols="100"></textarea>
                </div>

                <div class="d-flex justify-content-center p-2">
                    <input type="submit" placeholder="Submit" style="width: 75%; height: 50px"/>
                </div>
            </form>
        </div>
    </div>
</div>